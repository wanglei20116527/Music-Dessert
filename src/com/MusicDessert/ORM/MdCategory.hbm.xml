<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.MusicDessert.ORM.MdCategory" table="md_category" catalog="musicdessert" lazy ="false">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="increment"></generator>
        </id>
        <many-to-one name="mdUser" class="com.MusicDessert.ORM.MdUser" fetch="select">
            <column name="onwerId" not-null="true" />
        </many-to-one>
        <property name="name" type="java.lang.String">
            <column name="name" length="60" not-null="true" />
        </property>
        <set name="mdMusics" inverse="true">
            <key>
                <column name="categoryId" not-null="true" />
            </key>
            <one-to-many class="com.MusicDessert.ORM.MdMusic" />
        </set>
    </class>
</hibernate-mapping>
