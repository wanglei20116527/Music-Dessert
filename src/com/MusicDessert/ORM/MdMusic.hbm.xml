<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.MusicDessert.ORM.MdMusic" table="md_music" catalog="musicdessert">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="increment"></generator>
        </id>
        <many-to-one name="mdMusicCategory" class="com.MusicDessert.ORM.MdMusicCategory" fetch="select">
            <column name="music_category_id" not-null="true" />
        </many-to-one>
        <property name="displayName" type="java.lang.String">
            <column name="display_name" length="100" not-null="true" />
        </property>
        <property name="systemName" type="java.lang.String">
            <column name="system_name" length="32" not-null="true" unique="true" />
        </property>
        <property name="path" type="java.lang.String">
            <column name="path" length="200" not-null="true" />
        </property>
        <property name="musician" type="java.lang.String">
            <column name="musician" length="60" />
        </property>
        <property name="style" type="java.lang.String">
            <column name="style" length="60" />
        </property>
        <set name="mdUserMusics" inverse="true">
            <key>
                <column name="music_id" not-null="true" />
            </key>
            <one-to-many class="com.MusicDessert.ORM.MdUserMusic" />
        </set>
    </class>
</hibernate-mapping>
